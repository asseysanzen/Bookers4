<div class="row">
	<div class="col-xs-3">

<h2>User info</h2>
<%= render 'users/profile', current_user: @user %>
<!--同コントローラーのviewで表示ならusersは省略可 -->
<%= render 'stats' %>
<%= render 'follow_form' %>
</div>

<div class="col-xs-9">
<h2>followers</h2>
<% @user.followers.each do |user| %>
<table class="table table-hover table-inverse">
<thead>
		<tr>
			<th></th>
			<th>Name</th>
			<th colspan="3"></th>
		</tr>
</thead>
<tr>
	<td><%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "no-image-mini.jpg" %></td>
  <td>  <%= user.name %> </td>
  <td><%= link_to 'show', user_path(user) %></td>
</tr>

</table>
<% end %>
</div>
</div>